<div class="leaderboard__item <%= "leaderboard__item--first" if item_counter == 1 %> <%= "leaderboard__item--second" if item_counter == 2 %> <%= "leaderboard__item--third" if item_counter == 3 %>">
  <div class="leaderboard__left">
    <div class="leaderboard__badge">
      <span class="leaderboard__position"><%= item_counter %></span>
      <%= inline_svg "badges/levels/top3_event.svg" if item_counter <= 3 %>
      <%= inline_svg "badges/levels/top21_50_event.svg" if item_counter > 3 %>
    </div>
    <span class="leaderboard__name"><%= get_username_for_claimed_profile_uid(event_signup.profile_uid) %></span>
  </div>
  <div class="leaderboard__right">
    <div class="leaderboard__score">
      <span class="leaderboard__score-name">Pistol Kills</span>
      <span class="leaderboard__score-total">465</span>
    </div>
    <a class="leaderboard__action" href="">See profile</a>
  </div>
</div>
