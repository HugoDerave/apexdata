<% if Flipper.enabled?(:users) %>
  <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      We recommend using a different username from the one you use in Apex Legends. <br>
      <%= form.label :username %>
      <%= form.text_field :username %>
    </div>

    <br>

    <div class="field">
      Please use a unique password that is different from the one you use for Apex Legends. Passwords are encrypted and securely stored. <br>

      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>

    <div class="field">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
<% end %>
