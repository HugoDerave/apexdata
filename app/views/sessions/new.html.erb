<% content_for :page_title, "Login" %>

<div class="wrapper wrapper--tiny top-offset">
  <div class="item item--full-width">
    <h2 class="form-title">Login</h2>

    <div class="form-alert"><%= alert %></div>

    <%= form_tag sessions_path do |form| %>
      <div class="form-field">
        <%= label_tag :username, "Username", class: "form-label" %>
        <%= text_field_tag :username, "", placeholder: "Username", class: "form-control" %>
      </div>

      <div class="form-field">
        <%= label_tag :password, "Password", class: "form-label" %>
        <%= password_field_tag :password, "", placeholder: "Password", class: "form-control" %>
      </div>

      <%= submit_tag "Submit", class: "button" %>
    <% end %>

    <br>

    <small>Forgot your account? Please send an email to <a href="mailto:info@apexdata.gg">info@apexdata.gg</a></small>

    <br>

    <hr>

    <p>
      Don't have an account?
    </p>

    <div><%= link_to "Create an account", new_user_path, class: "button button--small" %></div>
  </div>
</div>
