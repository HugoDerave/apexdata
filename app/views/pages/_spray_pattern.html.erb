<% current_x = spray["starter"].last["x"] %>
<% current_y = spray["starter"].last["y"] %>

<svg class="spray-pattern" data-modify-css-variable data-modify-target="kick_yaw_random" height="140" width="100" style="--modifier: 1;
  <% spray["follow"].each_with_index do |dot, index| %>
    <% current_x += dot["x"] %>
    <% current_y += dot["y"] %>
    --dot-<%= index %>-x: <%= current_x %>; --dot-<%= index %>-y: <%= current_y %>;
  <% end if spray["follow"] %>">

  <g>
    <% spray["starter"].each do |dot| %>
      <%= tag.circle r: 3, fill: "#a02222", style: "
        cx: calc(#{dot["x"]} * var(--modifier));
        cy: calc(#{dot["y"]} * var(--modifier));" %>
    <% end %>

    <% spray["follow"].each_with_index do |dot, index| %>
      <%= tag.circle r: 3, fill: "#797b80", style: "
        cx: calc(var(--dot-#{ index }-x) * var(--modifier));
        cy: calc(var(--dot-#{ index }-y) * var(--modifier));" %>

      <% current_x = current_x + dot["x"] %>
      <% current_y = current_y + dot["y"] %>
    <% end if spray["follow"] %>
  </g>
</svg>
