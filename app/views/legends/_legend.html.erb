<article class="item item--legend item--compact">
  <div class="item__content item__content--same-height">
    <div class="item__description">
      <div class="item__large-icon-wrapper">
        <% if asset_exists?("legends/#{ item["name"].downcase }/character.png") %>
          <%= image_tag "legends/#{ item["name"].downcase }/character.png", class: "item__large-icon", alt: item["name"] %>
        <% end %>
      </div>

      <h3 class="item__title"><%= item["name"] if item["name"] %></h3>

      <div class="item__data-wrapper">
        <div class="item__main">
          <div class="columns columns--abilities">
            <% item["abilities"].each do |key, ability| %>
              <div class="item__full-width-info item__full-width-info--image">
                <% if asset_exists? "legends/#{ item["name"].downcase }/#{ key }.png" %>
                  <%= image_tag "legends/#{ item["name"].downcase }/#{ key }.png", alt: ability["name"] %>
                <% end %>

                <div>
                  <span class="color-basic"><%= ability["name"] %></span>
                  <small class="no-text-transform"><%= ability["description"] %></small>
                </div>
              </div>
            <% end if item["abilities"] %>
          </div>
        </div>
      </div>

      <div class="item__tray">
        <%= link_to "More Data", legend_show_path(item["name"].downcase), class: "button button--primary" %>
      </div>
    </div>
  </div>
</article>
